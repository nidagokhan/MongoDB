@model IEnumerable<MongoDB.Sample.Models.Shipper>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="widht=device-widht" />
    <title>Index</title>
    <style>
        table {
            border-collapse: separate;
            border-spacing: 15px; 
        }
    </style>
</head>
<body>
    <h1>Shipper</h1>
    <br />
    <form asp-controller="Home" asp-action="Add" method="get" enctype="multipart/form-data">
        <button type="submit">Add New Shipper</button>
    </form>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Company Name</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CompanyName</td>
                    <td>@item.Phone</td>
                    <td><a href="/Home/Update/@item.Id">Update</a> <a href="/Home/Delete/@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
